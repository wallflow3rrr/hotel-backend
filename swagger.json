{
  "openapi": "3.0.0",
  "info": {
    "title": "Hotel Booking API",
    "version": "1.0.0",
    "description": "API для управления номерами отеля и админ-панелью"
  },
  "servers": [
    {
      "url": "http://localhost:5001/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "in": "cookie",
        "name": "token"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    
    "/rooms": {
      "get": {
        "summary": "Получить список всех номеров",
        "description": "Можно фильтровать по названию, цене, количеству кроватей и типу кроватей",
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "description": "Фильтр по названию номера",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "minPrice",
            "in": "query",
            "description": "Минимальная цена за ночь",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "maxPrice",
            "in": "query",
            "description": "Максимальная цена за ночь",
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "beds",
            "in": "query",
            "description": "Минимальное количество доступных мест",
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "bedType",
            "in": "query",
            "description": "Тип кровати (twin, double и т.д.)",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Список номеров",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "title": { "type": "string" },
                      "description": { "type": "string" },
                      "price": { "type": "number" },
                      "available_beds": { "type": "integer" },
                      "bed_type": { "type": "string" },
                      "images": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/admin/rooms": {
      "get": {
        "summary": "Получить все номера (только админы)",
        "description": "Защищённый маршрут — требует авторизации через Bearer-токен в куках",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Список номеров",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "title": { "type": "string" },
                      "description": { "type": "string" },
                      "price": { "type": "number" },
                      "available_beds": { "type": "integer" },
                      "bed_type": { "type": "string" },
                      "images": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Не авторизован",
            "content": {
              "application/json": {
                "example": {
                  "error": "Не авторизован"
                }
              }
            }
          }
        }
      }
    },
    "/admin/bookings": {
      "get": {
        "summary": "Получить список бронирований (только админы)",
        "description": "Возвращает все бронирования номеров",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Список бронирований",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": { "type": "integer" },
                      "room_id": { "type": "integer" },
                      "guest_name": { "type": "string" },
                      "email": { "type": "string" },
                      "start_date": { "type": "string", "format": "date" },
                      "end_date": { "type": "string", "format": "date" },
                      "guests": { "type": "integer" }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Не авторизован",
            "content": {
              "application/json": {
                "example": {
                  "error": "Не авторизован"
                }
              }
            }
          }
        }
      }
    }
  }
}